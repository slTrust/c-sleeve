<wxs src="../../wxs/price.wxs" module="p"></wxs> 
<view class="container">
    <view class="left">
        <text class="title">{{spu.title}}</text>
        <view class="tags">
            <block wx:for="{{tags}}">
                <l-tag  type="reading"
                        bg-color="#DCEBE6"
                        font-color="#157658"
                        size="super-mini"
                        l-class="l-tag">
                    {{item}}
                </l-tag>
            </block>
        </view>
        <text class="subtitle">{{spu.subtitle}}</text>
        <view class="price-row">
             <l-price 
                color="#157658"
                unit-size="24"
                conunt-size="30"
                l-class="l-price-unit"
                value="{{p.mainPrice(spu.price,spu.discount_price).price}}"></l-price>
            <l-price 
                wx:if="{{p.slashedPrice(spu.price,spu.discount_price).price}}"
                l-class="discount-price"
                size="26"
                color="#999"
                bold="400"
                deleted
                value="{{p.slashedPrice(spu.price,spu.discount_price).price}}"></l-price>
            <l-tag l-class="discount-tag" type="reading"
                    bg-color="#c93756"
                    wx:if="{{spu.discount_price}}"
                    size="super-mini">
                折扣
            </l-tag>
        </view>
          
    </view>

    <view class="right">
        <button open-type="share">分享</button>
    </view>
</view>
  